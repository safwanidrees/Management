
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgitemdoes"
    android:orientation="vertical"
    android:paddingBottom="22dp"
    android:paddingTop="22dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/addtitle"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Name"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/updateeditTextName"
            android:inputType="text"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:textColorHint="#B5B5B5"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adddesc"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Email"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/updateemail"
            android:inputType="text"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:textColorHint="#B5B5B5"
            android:maxLength="25"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/adddate"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Phone"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/updatephone"
            android:inputType="number"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:textColorHint="#B5B5B5"
            android:maxLength="25"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Phone"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/address"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Address"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/updateAddress"

            android:inputType="text"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:textColorHint="#B5B5B5"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Address"
            android:layout_width="match_parent"
            android:layout_height="55dp" />






        <TextView
            android:id="@+id/ordertext"
            android:layout_below="@+id/datelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:text="Your Order"
            />
        <Spinner
            android:padding="10dp"
            android:id="@+id/updatespinnerOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ordertext"
            android:entries="@array/items"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Update"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:background="@drawable/bgbtncreate"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="55dp" />
    <Button
        android:id="@+id/btnDel"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="Delete"
        android:textColor="#f2f"
        android:textAllCaps="false"
        android:background="@drawable/bgbtncancel"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

</LinearLayout>



</ScrollView>
